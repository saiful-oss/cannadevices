  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_style",
        "label": "Cart type",
        "default": "drawer",
        "options": [
          {"value": "drawer", "label": "Drawer"},
          {"value": "pop", "label": "Popup"},
          {"value": "page", "label": "Page"},
          {"value": "compatible", "label": "App compatible page"}
        ]
      },
      {
        "type": "checkbox",
        "id": "cart_shipping_enable",
        "label": "Enable shipping estimates",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "cart_show_quantity",
        "label": "Show quantity selectors",
        "default": true
