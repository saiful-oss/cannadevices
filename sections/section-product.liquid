<!-- /sections/section-product.liquid -->

{%- assign product = all_products[section.settings.product] -%}

{%- if product.empty? -%}
  {%- if request.design_mode -%}
    <div
      class="section-product {{ section.settings.color_bg }}"
      style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;"
    >
      {% render 'onboarding-product', section: section %}
    </div>
  {%- endif -%}
{%- else -%}
  {%- liquid
    assign thumbs_align = section.settings.align
    assign ratio = product.media[0].preview_image.aspect_ratio
    if ratio < 1
      assign thumbs_align = 'center'
    endif
  -%}
  <div
    class="section-product {{ section.settings.color_bg }}"
    data-product-handle="{{ product.handle }}"
    data-section-id="{{ section.id }}"
    data-section-type="product"
    data-enable-video-looping="{{ section.settings.enable_video_looping }}"
    data-thumbs-align="{{ thumbs_align }}"
    data-enable-history-state="false"
    data-product-sticky-enabled="{{ section.settings.product_sticky_enable }}"
    data-tall-layout="{% if section.settings.image_layout == 'grid' or section.settings.image_layout == 'mosaic' %}true{% else %}false{% endif %}"
    style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;"
  >
    {%- liquid
  assign current_variant = product.selected_or_first_available_variant

  # rearrange media for alt text filter if needed
  assign has_alt_text_filtered_images = false
  assign alt_text_concat = product.media | map: 'alt' | join: ''
  if alt_text_concat contains '#' and alt_text_concat contains '_'
    assign has_alt_text_filtered_images = true
  endif

  assign current_variant_featured_media_alt_text_option = product.selected_or_first_available_variant.featured_media.alt | split: '#' | last | split: ' ' | first

  assign product_media = product.media

  if has_alt_text_filtered_images
    assign product_media = null | sort

    for media_item in product.media
      assign media = media_item
      assign alt_text = media.alt | strip_html
      assign alt_text_parts = alt_text | split: '#'
      assign alt_text_option = ''
      if alt_text contains '#' and alt_text contains '_' and alt_text_parts.size == 2
        assign alt_text_option = alt_text_parts | last | split: ' ' | first
        if alt_text_option == current_variant_featured_media_alt_text_option
          assign new_product_media = media | sort
          assign product_media = product_media | concat: new_product_media
        endif
      else
        assign new_product_media = media | sort
        assign product_media = product_media | concat: new_product_media
      endif
    endfor
  endif

  # First image aspect ratio is used to prevent jank/CLS
  assign first_product_media = product_media[0]

  assign image_layout = section.settings.image_layout
  assign enable_thumbnails = false

  case image_layout
    when 'grid'
      assign media_style = 'product__wrapper--grid'
    when 'mosaic'
      assign media_style = 'product__wrapper--mosaic'
    when 'thumbnails'
      assign media_style = 'product__wrapper--thumbnails'
      assign enable_thumbnails = true
      assign slideshow_attributes = 'data-is-product-slideshow'
  endcase
-%}

<div class="product__wrapper {{ media_style }} {{ section.settings.width }} section-padding">
  <div class="product-content">
    <div class="grid grid--product">
      <div class="grid__item grid__item--product medium-up--hide" data-morph-skip>
        {% for block in section.blocks %}
          {%- liquid
            assign padding_bottom = block.settings.padding_bottom

            capture block_style
              if padding_bottom
                echo '--block-padding-bottom: ' | append: block.settings.padding_bottom | append: 'px;'
              endif
            endcapture

            if block_style != blank
              assign block_style = 'style="' | append: block_style | append: '"'
            endif
          -%}
          {% case block.type %}
            {% when 'title' %}
              {% render 'product-title', product: product, block: block, classes: ' product__title-block--mobile', block_style: block_style %}
            {% when 'price' %}
              {% render 'product-price', product: product, block: block, classes: ' product__price-block--mobile', block_style: block_style %}
          {% endcase %}
        {% endfor %}
      </div>

      <div class="grid__item grid__item--product" data-morph-skip>
        {% if product_media.size > 0 %}
          {% if product_media.size == 1 %}
            {% capture product_media_class %}
              product__slides--single
            {% endcapture %}
          {% else %}
            {% capture product_media_attributes %}
              data-custom-scrollbar-items
              style="--default-ratio: {{ 1 | divided_by: first_product_media.aspect_ratio | times: 100 | at_most: 100 }}%"
            {% endcapture %}
            {% capture product_media_class %}
              flickity-lock-height flickity-disabled-mobile
            {% endcapture %}
            {% capture slideshow_scrollbar %}
              <div class="custom-scrollbar small-down--show" data-custom-scrollbar>
                <div class="custom-scrollbar__track" data-custom-scrollbar-track></div>
              </div>
            {% endcapture %}
          {% endif %}

          <div
            class="product__slides {{ product_media_class }}"
            data-product-slideshow="{{ product.handle }}"
            data-product-slideshow-style="{{ image_layout }}"
            {{ product_media_attributes }}
          >
            {% for media_item in product_media %}
              {% comment %} Variant image groups require product media to be in a specific order {% endcomment %}
              {% assign media = media_item %}

              {% render 'media', media: media, section: section %}
            {% endfor %}
          </div>

          {{ slideshow_scrollbar }}
        {% else %}
          <div class="product__image__placeholder"></div>
        {% endif %}

        {% assign first_3d_model = product_media | where: 'media_type', 'model' | first %}
        {% if first_3d_model %}
          <button
            class="btn btn--ar uppercase"
            data-shopify-xr
            data-shopify-model3d-id="{{ first_3d_model.id }}"
            data-shopify-title="{{ product.title | strip_html | escape }}"
            data-shopify-xr-hidden
          >
            {% render 'icon-media-model' %}
            <span>{{ 'products.product.view_in_space' | t }}</span>
          </button>
        {% endif %}

        <noscript>
          {% for image in product_media %}
            <img src="{{ image.preview_image | img_url: '900x' }}" alt="{{ image.alt | default: product.title | strip_html | escape }}">
          {% endfor %}
        </noscript>

        {%- if enable_thumbnails and product_media.size > 1 -%}
          <div data-product-thumbs class="media__thumb__wrapper small-down--hide">
            {% for media_item in product_media %}
              {% comment %} Variant image groups require product media to be in a specific order {% endcomment %}
              {% assign media = media_item %}
              {% if has_alt_text_filterd_images and media_list.size == product_media.size %}
                {% assign new_media_position = media_list[forloop.index0] | minus: 1 %}
                {% assign media = product_media[new_media_position] %}
              {% endif %}

              {% assign alt_text = media.alt | strip_html | escape %}
              {% assign alt_text_parts = alt_text | split: '#' %}
              {% assign alt_text_option = '' %}
              {% if alt_text contains '#' and alt_text contains '_' and alt_text_parts.size == 2 %}
                {% assign alt_text_option = alt_text_parts | last | split: ' ' | first %}
              {% endif %}

              <div
                class="media__thumb"
                data-slideshow-thumbnail
                data-media-select="{{ media.id }}"
                aria-label="{{ alt_text_parts | first }}"
              >
                <img alt="{{ media.alt | strip_html | escape }}" src="{{ media.preview_image.src | img_url: '200x200', crop: 'center' }}" width="200" height="200" loading="lazy">
                {%- if media.media_type == 'model' -%}
                  {% render 'icon-media-model' %}
                {%- elsif media.media_type contains 'video' -%}
                  {% render 'icon-media-video' %}
                {%- endif -%}
              </div>
            {% endfor %}
          </div>
        {%- endif -%}
      </div>

      <div class="grid__item grid__item--product">
        <div class="product__form__wrapper" data-form-wrapper>
          {% for block in section.blocks %}
            {%- liquid
              assign text = block.settings.text
              assign padding_bottom = block.settings.padding_bottom

              capture block_style
                if padding_bottom
                  echo '--block-padding-bottom: ' | append: block.settings.padding_bottom | append: 'px;'
                endif
              endcapture

              if block_style != blank
                assign block_style = 'style="' | append: block_style | append: '"'
              endif
            -%}

            {% case block.type %}
              {%- when '@app' -%}
                {% render block %}
              {% when 'title' %}
                {% render 'product-title', product: product, block: block, classes: ' product__title-block--desktop', block_style: block_style %}
              {% when 'price' %}
                {% render 'product-price', product: product, block: block, classes: ' product__price-block--desktop', block_style: block_style %}
              {% when 'form' %}
                <div class="product__block product__details" {{ block_style }}>
                  {% render 'product-form', product: product, block: block, has_alt_text_filtered_images: has_alt_text_filtered_images %}
                </div>
              {% when 'description' %}
                <div class="product__block product-description rte rte--column accordion-neighbor" {{ block_style }} {{ block.shopify_attributes }}>
                  {%- assign product_description_content = product.description | strip -%}
                  {%- assign truncate_string = 'products.general.read_more' | t -%}
                  {%- assign truncate_html = '<button type="button" class="p underline" data-truncated-button>' | append: truncate_string | append: '</button>' -%}

                  {%- if block.settings.style == 'none' -%}
                    {% if block.settings.read_more %}
                      <div class="product-description__holder product-description__holder--truncate" data-truncated-holder>
                        <div class="product-description__inner">
                          <div class="product-description__content" data-truncated-content="product-description__content--truncate">
                            {{ product_description_content }}
                          </div>
                        </div>

                        <div class="product-description__actions">
                          {{ truncate_html }}
                        </div>
                      </div>
                    {% else %}
                      {{ product.description }}
                    {% endif %}
                  {% else %}
                    <div class="tabs-wrapper" data-morph-skip>
                      {% render 'product-tabs', block: block, product: product, product_description_content: product_description_content, truncate_html: truncate_html %}
                    </div>
                  {%- endif -%}
                </div>
              {% when 'sharing' %}
                <div class="product__block" {{ block_style }} {{ block.shopify_attributes }}>
                  {% render 'share', product: product, label: block.settings.share_label, block: block %}
                </div>
              {% when 'pickup' %}
                <div class="product__block product__pickup accordion-neighbor" {{ block_style }} {{ block.shopify_attributes }}>
                  {%- render 'pickup-availability', product: product -%}
                </div>
              {% when 'text' %}
                <div class="product__block product__subheading product__subheading--rte" {{ block_style }} {{ block.shopify_attributes }}>
                  {% if block.settings.title != '' %}
                    {{ block.settings.title }}
                  {% endif %}
                </div>
              {% when 'liquid' %}
                <div class="product__block" {{ block_style }} {{ block.shopify_attributes }}>
                  {{ block.settings.custom_liquid }}
                </div>
              {% when 'upsell' %}
                <div class="product__block" {{ block_style }} {{ block.shopify_attributes }} data-morph-skip>
                  {%- assign upsell_product = all_products[block.settings.product] -%}
                  {% render 'upsell-product', upsell_product: upsell_product, block: block %}
                </div>

              {% when 'complimentary' %}
                <div class="product__block" {{ block_style }} {{ block.shopify_attributes }} data-morph-skip>
                  <div class="complimentary__wrapper js-unloaded" data-product-complimentary-loaded>
                    <product-complimentary
                      class="product-complimentary"
                      data-url="{{ routes.product_recommendations_url }}?section_id=api-product-upsell-item&product_id={{ product.id }}&limit={{ block.settings.complimentary_list_limit }}&intent=complementary"
                    >
                    </product-complimentary>
                  </div>
                </div>
              {% when 'siblings' %}
                {% render 'product-siblings', block: block, product: product, block_style: block_style %}
              {% when 'icon' %}
                {%- liquid
                  assign image = block.settings.image
                  assign icon_size = block.settings.icon_size | default: 20
                  assign icon_width = icon_size
                  assign icon_width_retina = icon_width | times: 2
                  assign icon_sizes = icon_width | append: 'px'
                  assign icon_widths = icon_width | append: ', ' | append: icon_width_retina
                  assign custom_class = ''
                  if block.settings.show_icon_bg
                    assign custom_class = ' icon__column__icon--bg icon__column__icon--rounded'
                  endif
                -%}

                <div class="product__block product__text-with-icon rte" {{ block_style }} {{ block.shopify_attributes }}>
                  <div class="icon__column__icon{{ custom_class }}" style="--stroke: {{ block.settings.icon_color }}; --icon-size: {{ icon_size }}px;">
                    {%- if image -%}
                      {{ image | image_url: width: icon_width_retina | image_tag: loading: 'lazy', sizes: icon_sizes, widths: icon_widths }}
                    {%- else -%}
                      {%- render 'icons', filename: block.settings.icon_name -%}
                    {%- endif -%}
                  </div>

                  {%- if text != blank -%}
                    <p>{{ text | remove: '<p>' | remove: '</p>' }}</p>
                  {%- endif -%}
                </div>

              {% when 'icon_row' %}
                {%- liquid
                  assign image = block.settings.image
                  assign alignment = block.settings.alignment
                  assign icon_size = block.settings.icon_size | default: 20
                  assign icon_width = icon_size
                  assign icon_width_retina = icon_width | times: 2
                  assign icon_sizes = icon_width | append: 'px'
                  assign icon_widths = icon_width | append: ', ' | append: icon_width_retina
                  assign custom_class = ''
                  if block.settings.show_icon_bg
                    assign custom_class = ' icon__column__icon--bg icon__column__icon--rounded'
                  endif
                -%}

                {%- capture icons_row -%}
                    {%- for i in (1..4) -%}
                      {%- liquid
                        assign icon_key = 'icon_name_' | append: i
                        assign icon_color_key = 'icon_color_' | append: i
                        assign image_key = 'image_' | append: i
                        assign text_key = 'text_' | append: i

                        assign icon_name = block.settings[icon_key]
                        assign icon_color = block.settings[icon_color_key]
                        assign image = block.settings[image_key]
                        assign text = block.settings[text_key]
                      -%}

                      {%- if icon_name != '' or image != blank or text != blank -%}
                        <div class="icons-row__item {{ alignment }}">
                          <div class="icon__column__icon{{ custom_class }}" style="--stroke: {{ icon_color }}; --icon-size: {{ icon_size }}px;">
                            {%- if image -%}
                              {{ image | image_url: width: icon_width_retina | image_tag:
                                loading: 'lazy',
                                sizes: icon_sizes,
                                widths: icon_widths
                              }}
                            {%- elsif icon_name != '' -%}
                              {%- render 'icons', filename: icon_name -%}
                            {%- endif -%}
                          </div>

                          {%- if text != blank -%}
                            <p>{{ text | remove: '<p>' | remove: '</p>' }}</p>
                          {%- endif -%}
                        </div>
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endcapture -%}

                <div class="product__block product__text-with-icon rte" {{ block_style }} {{ block.shopify_attributes }}>
                  {%- if icons_row != blank -%}
                    <div class="icons-row">
                      {{ icons_row }}
                    </div>
                  {%- endif -%}
                </div>
              {% when 'image' %}
                <div class="product__block product__image {{ block.settings.alignment }}" {{ block_style }} {{ block.shopify_attributes }}>
                  <div class="product__image__inner" style="max-width: {{ block.settings.image_max_limit | append: 'px' }};">
                    {%- if block.settings.image != blank -%}
                      {%- render 'image-fit', img_object: block.settings.image -%}
                    {%- else -%}
                      {%- render 'image-fill', img_object: '' -%}
                    {%- endif -%}
                  </div>
                </div>
              {% when 'tag' %}
                {%- if text != blank -%}
                  {%- liquid
                    assign prev_index = forloop.index0 | minus: 1
                    assign next_index = forloop.index0 | plus: 1
                    assign prev_block = section.blocks[prev_index]
                    assign next_block = section.blocks[next_index]
                  -%}

                  {%- if forloop.first or prev_block.type != 'tag' -%}
                    <div class="product__tag-wrapper">
                  {%- endif -%}

                  <div class="product__block product__tag" {{ block_style }} {{ block.shopify_attributes }}>
                    <span class="product__tag-text {{ block.settings.button_style }} {{ block.settings.button_size }} {{ block.settings.button_color }}">
                      {{ text }}
                    </span>
                  </div>

                  {%- if forloop.last or next_block.type != 'tag' -%}
                    </div>
                  {%- endif -%}
                {%- endif -%}
              {% when 'taxes_included' %}
                {%- if cart.taxes_included or cart.duties_included or shop.shipping_policy.body != blank -%}
                  <p class="product__block taxes-included-message--product" {{ block_style }} {{ block.shopify_attributes }}>
                    {%- if cart.duties_included and cart.taxes_included -%}
                      {{ 'products.tax.duties_and_taxes_included' | t }}
                    {%- elsif cart.taxes_included -%}
                      {{ 'products.tax.taxes_included' | t }}
                    {%- elsif cart.duties_included -%}
                      {{ 'products.tax.duties_included' | t }}
                    {%- endif -%}
                    {%- if shop.shipping_policy.body != blank -%}
                      {{ 'products.tax.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                    {%- endif -%}
                  </p>
                {%- endif -%}
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>

    {%- if section.blocks.size > 0 and section.settings.tabs_position == 'below' -%}
      <div class="tabs-wrapper" data-morph-skip>
        {% render 'product-tabs', product: product %}
      </div>
    {%- endif -%}
  </div>
</div>

{% if section.settings.zoom_enable %}
  {% render 'zoom-pswp' %}
{% endif %}

<script type="application/json" id="ModelJson-{{ section.id }}">
  {{ product_media | where: 'media_type', 'model' | json }}
</script>

{% assign product_media_images_only = product_media | where: 'media_type', 'image' %}
<script data-product-media-json type="application/json">
  {
    "media": [
      {% for media in product_media_images_only %}
        {
          "src": "{{ media.preview_image | image_url }}",
          "width": {{ media.preview_image.width }},
          "height": {{ media.preview_image.height }},
          {% comment %} Double quotes break Alpine.js, so we need to escape them {% endcomment %}
          "alt": "{{ media.alt | strip_html | replace: '"', "&quot" }}",
          "media_type": "{{ media.media_type }}",
          "id": "{{ media.id }}"
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }
</script>

  </div>
{%- endif -%}

{% schema %}
