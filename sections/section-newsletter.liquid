<!-- /sections/section-newsletter.liquid -->

{% comment %} <div
  class="newsletter {{ section.settings.color_bg }} {{ section.settings.text_color }}"
  data-section-id="{{ section.id }}"
  data-section-type="newsletter"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;"
>
  <div class="{{ section.settings.width }} section-padding">
    <div class="newsletter__wrapper">
      <div class="newsletter__content">
        {% if section.settings.title != '' %}
          <h2 class="h3 newsletter__title">{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.richtext != blank %}
          <div class="newsletter__text rte subtitle--decorated">
            {{ section.settings.richtext }}
          </div>
        {% endif %}
        <div class="newsletter__button">
          {% assign unique = 'default-newsletter-' | append: section.id %}
          {% render 'newsletter-form', unique: unique, show_discount_message: true, success_text: section.settings.success, color: section.settings.button_color, style: section.settings.button_style %}
        </div>
      </div>
    </div>
  </div>
</div> {% endcomment %}


<section id="newsletter-section" class="py-16 md:py-24 bg-dark">
    <div class="max-w-[1400px] mx-auto px-4 sm:px-6">
        <div class="bg-gradient-to-br from-darkLight to-dark rounded-3xl p-8 sm:p-12 lg:p-16 border border-white/10 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
            
            <div class="relative z-10 grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-16 items-center">
                <div>
                    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black mb-3 sm:mb-4 text-white">{{ section.settings.title | escape }}</h2>
                    <p class="text-base sm:text-lg md:text-xl text-white/70 leading-relaxed">
                       {{ section.settings.description }}
                    </p>
                    <div class="flex flex-wrap items-center gap-4 sm:gap-6 mt-6 sm:mt-8">
                        <div class="flex items-center space-x-2">
                            <i class="fa-solid fa-circle-check text-primary text-xl"></i>
                            <span class="text-white/80">New arrivals first</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <i class="fa-solid fa-circle-check text-primary text-xl"></i>
                            <span class="text-white/80">Exclusive deals</span>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="bg-dark rounded-2xl p-6 sm:p-8 border border-white/10">
                        <div class="flex flex-col sm:flex-row gap-3 sm:space-x-3">
                            <div class="newsletter__button">
                              {% include 'newsletter-form' %}
                            </div>
                        </div>
                        <p class="text-xs text-white/50 mt-4">
                            By subscribing, you agree to our Privacy Policy and consent to receive updates from CannaDevices.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Newsletter"
    },
    {
      "id": "richtext",
      "type": "richtext",
      "label": "Text",
      "default": "<p>Subscribe to get special offers, free giveaways, and once-in-a-lifetime deals.  We promise to send emails you will love.</p>"
    },
    {
      "type": "textarea",
      "id": "success",
      "label": "Success message",
      "default": "Success! Use code CLUB10 to save 10%",
      "info": "Include your discount code and a message to be displayed."
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "default": "text--neutral",
      "options": [
        {"value": "text--neutral", "label": "Normal text"},
        {"value": "text--white", "label": "White"},
        {"value": "text--primary", "label": "Primary accent"},
        {"value": "text--secondary", "label": "Secondary accent"},
        {"value": "text--black", "label": "Black"},
        {"value": "text--invert--primary", "label": "Primary dark accent"},
        {"value": "text--invert--secondary", "label": "Secondary dark accent"},
        {"value": "text--invert", "label": "Inverted text color"}
      ]
    },
    {
      "type": "select",
      "id": "color_bg",
      "label": "Background color",
      "default": "palette--light bg--neutral",
      "options": [
        {"value": "palette--light bg--neutral", "label": "Default"},
        {"value": "palette--light bg--accent", "label": "Light"},
        {"value": "palette--dark bg--invert", "label": "Dark"},
        {"value": "palette--dark bg--invert--accent", "label": "Dark accent"}
      ]
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Button color",
      "default": "btn--neutral",
      "options": [
        {"value": "btn--primary", "label": "Bright accent"},
        {"value": "btn--secondary", "label": "Secondary accent"},
        {"value": "btn--neutral", "label": "Text color"},
        {"value": "btn--black", "label": "Black"},
        {"value": "btn--white", "label": "White"}
      ]
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "default": "btn--soft",
      "options": [
        {"value": "border-bottom-link", "label": "Plain text"},
        {"value": "btn", "label": "Solid button"},
        {"value": "btn--soft", "label": "Soft button"},
        {"value": "btn--outline", "label": "Outlined button"}
      ]
    },
    {
      "type": "paragraph",
      "content": "Subscribers are under 'Accepts Marketing' in your [customer admin](/admin/customers)."
    },
    {
      "type": "header",
      "content": "Section spacing"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper",
      "options": [
        {"value": "wrapper--full", "label": "Full width padded"},
        {"value": "wrapper", "label": "Page width"},
        {"value": "wrapper--narrow", "label": "Page width narrow"}
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Text"
    }
  ],
  "disabled_on": {
    "groups": ["header", "aside"]
  }
}
{% endschema %}
